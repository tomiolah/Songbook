<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane fx:id="mainBorderPain" prefHeight="800.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="projector.controller.ProjectionScreenSettingsController">
    <center>
        <ScrollPane fx:id="scrollPane" prefHeight="55.0" prefWidth="50.0" BorderPane.alignment="CENTER">
            <BorderPane maxWidth="1.7976931348623157E308">
                <left>
                    <GridPane prefHeight="850.0" prefWidth="700.0" BorderPane.alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="248.0" minWidth="10.0" prefWidth="231.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="622.0" minWidth="10.0" prefWidth="465.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="677.0" minHeight="100.0" prefHeight="677.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <padding>
                            <Insets left="4.0"/>
                        </padding>
                        <Label text="%Projection max font size"/>
                        <Slider fx:id="maxFontSlider" max="140" min="10" prefHeight="31.0" showTickLabels="true"
                                showTickMarks="true" GridPane.columnIndex="1"/>
                        <CheckBox fx:id="breakLinesCheckbox" mnemonicParsing="false" prefHeight="23.0"
                                  text="%Break lines" GridPane.rowIndex="1"/>
                        <Slider fx:id="breakAfterSlider" max="98" min="1" prefHeight="31.0" GridPane.columnIndex="1"
                                GridPane.rowIndex="1"/>
                        <Label text="%Line space" GridPane.rowIndex="2"/>
                        <Slider fx:id="slider" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <CheckBox fx:id="showSongSecondTextCheckBox" mnemonicParsing="false"
                                  text="%Show song second text" GridPane.rowIndex="10"/>
                        <ColorPicker fx:id="songSecondTextColorPicker" prefHeight="31.0" prefWidth="136.0"
                                     GridPane.columnIndex="1" GridPane.rowIndex="10"/>
                        <ListView fx:id="listView" prefHeight="163.0" prefWidth="438.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="11"/>
                        <Label text="%Font" GridPane.rowIndex="11"/>
                        <Label text="%Color" GridPane.rowIndex="3"/>
                        <ColorPicker fx:id="colorPicker" prefHeight="31.0" prefWidth="134.0" GridPane.columnIndex="1"
                                     GridPane.rowIndex="3"/>
                        <RadioButton fx:id="imageRadioButton" mnemonicParsing="false" text="%Background image"
                                     GridPane.rowIndex="4"/>
                        <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <center>
                                <TextField fx:id="imagePathTextField" prefHeight="31.0" prefWidth="231.0"
                                           BorderPane.alignment="CENTER"/>
                            </center>
                            <right>
                                <Button fx:id="imageBrowseButton" mnemonicParsing="false"
                                        onAction="#onImageBrowseButtonAction" text="%Browse"
                                        BorderPane.alignment="CENTER"/>
                            </right>
                        </BorderPane>

                        <RadioButton fx:id="colorRadioButton" mnemonicParsing="false" text="%Background color"
                                     GridPane.rowIndex="5"/>
                        <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <center>
                                <HBox alignment="CENTER_LEFT" spacing="4.0">
                                    <ColorPicker fx:id="backgroundColorPicker" prefHeight="31.0" prefWidth="136.0"/>

                                    <Button contentDisplay="CENTER" graphicTextGap="0.0" maxHeight="-Infinity"
                                            maxWidth="-Infinity" mnemonicParsing="false"
                                            onAction="#resetBackgroundColor" prefHeight="17.0" prefWidth="17.0"
                                            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                        <graphic>
                                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                       preserveRatio="true">
                                                <Image url="@../icons/reset.png"/>
                                            </ImageView>
                                        </graphic>
                                        <tooltip>
                                            <Tooltip text="%Reset to default setting"/>
                                        </tooltip>
                                        <padding>
                                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                                        </padding>
                                    </Button>
                                </HBox>
                            </center>
                        </BorderPane>
                        <Label text="%Progress line color" GridPane.rowIndex="6"/>
                        <ColorPicker fx:id="progressLineColorPicker" prefHeight="31.0" prefWidth="136.0"
                                     GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        <Label text="%Progress line thickness" GridPane.rowIndex="7"/>
                        <Spinner fx:id="progressLineThicknessSpinner" editable="true" prefHeight="31.0" prefWidth="75.0"
                                 GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                        <Label text="%Progress line position" GridPane.rowIndex="8"/>
                        <HBox alignment="CENTER_LEFT" spacing="14.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
                            <RadioButton fx:id="progressLinePositionTopRadioButton" text="%Top"/>
                            <RadioButton fx:id="progressLinePositionBottomRadioButton" text="%Bottom"/>
                        </HBox>
                        <Label text="%Font weight" GridPane.rowIndex="9"/>
                        <ComboBox fx:id="fontWeightComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="9"/>
                    </GridPane>
                </left>
            </BorderPane>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="TOP_RIGHT">
            <Button mnemonicParsing="false" onAction="#onSaveButtonAction" text="%Save"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
