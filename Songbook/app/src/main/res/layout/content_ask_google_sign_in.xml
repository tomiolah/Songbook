<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryColor"
    android:paddingBottom="18dp"
    android:paddingTop="18dp"
    tools:context=".ui.activity.SongActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/sync_in_google_drive"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="303dp"
        android:layout_height="83dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center|top"
        android:text="@string/from_now_you_can_synchronize_your_favourite_songs_across_google_drive"
        android:textSize="18sp" />


    <Button
        android:id="@+id/dontShowButton"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:onClick="onDontShowAgain"
        android:text="@string/don_t_show_again"
        android:textColor="@color/secondaryTextColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_dark"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
        android:onClick="onGoogleSignIn"
        android:text="@string/sign_in_with_google" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:background="?android:attr/listDivider" />

</RelativeLayout>